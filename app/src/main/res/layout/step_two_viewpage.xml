<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BG_SCREEN_PAGEVIEW"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        style="@style/Text_viewpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/manrope_bold"
        android:gravity="center"
        android:text="To add Distribution Box to ghost home . Follow the instructions "
        android:textAlignment="center"
        android:textSize="14sp"

        />

    <TextView
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/manrope_bold"
        android:text="Step 2"
        android:textSize="20sp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                style="@style/BG_SCREEN"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/dot_indicator_active">

            </ImageView>

            <TextView
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="start"
                android:text="Turn on ghost switch device you want to connect to ghost home."
                android:textAlignment="textStart"
                android:textSize="16sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                style="@style/BG_SCREEN"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/dot_indicator_active">

            </ImageView>

            <TextView
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="start"
                android:text="Check ghost switch label and connect to the ghost switch hot spot with your phone."
                android:textAlignment="textStart"
                android:textSize="16sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <ImageView
                style="@style/BG_SCREEN"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/dot_indicator_active">

            </ImageView>

            <TextView
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="start"
                android:text="Open your browser or open ghost switch  app"
                android:textAlignment="textStart"
                android:textSize="16sp"

                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>